<div class="landing-page">
  <div class="landing-text">
  <h1 id="ideas-page-title">Your Typewriter: A place to record your thoughts.</h1>
  <div class="search-form">
    <input class="search" type="text" name="search" placeholder="Search...">
  </div>
  <div class="new-idea-parent">
<br>
    <% @ideas.each do |idea| %>
<br>
    <div class="any-idea">
      <div class="new-idea" data-idea-id = "<%= idea.id %>" id="idea">
        <ul id="idea-title-show" data-title-id = "<%= idea.id %>" contentEditable="true"><strong>Title: </strong><%=idea.title  %></ul>
        <ul id="idea-body-show" data-body-id = "<%=idea.id %>" contentEditable="true"><strong>Body: </strong><%=idea.body_truncation  %></ul>
        <ul id="idea-quality-show" data-body-id = "<%=idea.id %>">Quality: <%=idea.quality  %></ul>
        <ul><button id="plus-quality" type="button"> Thumbs Up </button>
        <button id="minus-quality" type="button"> Thumbs Down </button></ul>
        <ul><div class="delete-button">
            <input type="submit" value="Delete">
          </div>
        <div class= "kitten-button"><input type="submit" value="Add a Kitten"</ul>
      </div>
    </div>
    <% end %>
  </div>

<h2 id="new-ideas-header">Create a New Idea:</h2>
<div class="new-idea-form">
    <fieldset class="form-group">
      Idea Title:
      <input id="idea-title" type="text" name:"Title:"><br>
    </fieldset>
    <fieldset class="form-group">
      Idea Body: <input id="idea-body" type="text" name:"Body:"><br>
    </fieldset>
    <button id="submit-button" type="button">Save</button>
</div>
</div>
</div>
